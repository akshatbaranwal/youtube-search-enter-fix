{
  "name": "youtube-search-enter-fix",
  "version": "1.0.0",
  "description": "Browser extension that fixes YouTube search by making Enter key properly trigger search (Firefox, Chrome, Edge)",
  "main": "src/core/content.js",
  "scripts": {
    "build": "node scripts/build.js all",
    "build:firefox": "node scripts/build.js firefox",
    "build:chrome": "node scripts/build.js chrome",
    "build:edge": "node scripts/build.js edge",
    "watch": "node scripts/build.js watch",
    "clean": "rm -rf dist",
    "generate-icons": "cd src/assets/icons && ./generate-icons.sh"
  },
  "keywords": [
    "firefox",
    "chrome",
    "edge",
    "browser-extension",
    "webextension",
    "youtube",
    "search",
    "productivity",
    "cross-browser"
  ],
  "author": "Akshat Baranwal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AkshatBaranwal/youtube-search-enter-fix.git"
  },
  "bugs": {
    "url": "https://github.com/AkshatBaranwal/youtube-search-enter-fix/issues"
  },
  "homepage": "https://github.com/AkshatBaranwal/youtube-search-enter-fix#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "chokidar": "^3.5.3"
  }
}